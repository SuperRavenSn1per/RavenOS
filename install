w,h = term.getSize()
id = os.getComputerID()

mainUrl = "https://raw.githubusercontent.com/SuperRavenSn1per/RavenOS/"
branch = "main"

dirs = {}
files = {}

function install(installFile)
  content = http.get(mainUrl..branch.."/"..installFile).readAll()
  f = fs.open(file)
  f.write(info)
  f.close()
end

term.setBackgroundColor(colors.lime)
term.setTextColor(colors.white)
term.clear()
term.setCursorPos(1,1)
for i,dir in pairs(dirs) do
  fs.makeDir(dir)
end
paintutils.drawLine(w / 2 - 5, h / 2 + 1, w / 2 + 5, h / 2 + 1, colors.lightGray)
for i,file in pairs(files) do
  term.setCursorPos(w / 2 - string.len("RavenOS") / 2, h / 2 - 1)
  write("RavenOS")
  paintutils.drawPixel(w / 2 - 5 + i, h / 2 + 1, colors.green)
  term.setBackgroundColor(colors.lime)
  term.setCursorPos(1,1)
  write("ID: "..id)
  term.setCursorPos(1,h)
  write("File: "..file)
  term.setCursorPos(w - string.len(i.."/"..#files), h)
  write(i.."/"..#files)
  install(file)
end
